<UserControl x:Class="Eng.EFsExtensions.EFsExtensionsModuleBase.ModuleUtils.TTSs.CtrTtsModuleSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eng.EFsExtensions.EFsExtensionsModuleBase.ModuleUtils.TTSs"
             mc:Ignorable="d" 
             x:Name="ctrTtsModuleSelector"
             d:DesignHeight="450" d:DesignWidth="800">
  <DockPanel>
    <DockPanel DockPanel.Dock="Bottom" Margin="0 8 0 0" 
               Visibility="{Binding ElementName=ctrTtsModuleSelector, Path=SpeechTestVisibility }">
      <Label DockPanel.Dock="Left">Test Speech:</Label>
      <Button DockPanel.Dock="Right" x:Name="btnTrySpeech" Click="btnTrySpeech_Click" Padding="16 0 16 0">Try</Button>
      <TextBox x:Name="txtTrySpeech" Text="Gear up - three green" />
    </DockPanel>
    <TabControl x:Name="tabTtss" Padding="8" >
    </TabControl>
  </DockPanel>
</UserControl>
